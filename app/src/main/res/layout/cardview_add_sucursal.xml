<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@color/colorVerdeAzul"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_rc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgCloseDialog"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/ic_close_white"
                    tools:ignore="VectorDrawableCompat" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/boton_redondo_verde"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtAgregarUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginVertical="15dp"
                        android:textColor="@color/colorVerdeAzul"
                        android:text="AGREGAR SUCURSAL"
                        android:textSize="30dp" />


                    <LinearLayout
                        android:paddingHorizontal="12dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/colorVerdeAzul"
                            android:text="NOMBRE:"/>
                        <EditText
                            android:id="@+id/etxtAddNombre"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/colorVerdeAzul"
                            android:text="CLAVE (dos caracteres):"/>
                        <EditText
                            android:id="@+id/etxtClave"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>


                    <android.widget.Button
                        android:id="@+id/btnAddDone"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_done_foreground"/>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>