<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".administrador.InfoSucursales">

    <ScrollView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_rc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/boton_redondo_verde"
                android:orientation="vertical">

                <LinearLayout
                    android:paddingHorizontal="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorVerdeAzul"
                        android:text="MONTO:"/>
                    <EditText
                        android:id="@+id/etxtMonto"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:enabled="false"
                        android:textColor="@color/colorBlack"/>


                    <TextView
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorVerdeAzul"
                        android:text="USUARIO:"/>
                    <EditText
                        android:id="@+id/etxtUsuario"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:enabled="false"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorVerdeAzul"
                        android:text="FECHA:"/>
                    <EditText
                        android:id="@+id/etxtFecha"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:enabled="false"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorVerdeAzul"
                        android:text="HORA:"/>
                    <EditText
                        android:id="@+id/etxtHora"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:enabled="false"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorVerdeAzul"
                        android:text="SEMANA FISCAL:"/>
                    <EditText
                        android:id="@+id/etxtSemana"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:enabled="false"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorVerdeAzul"
                        android:text="UBICACIÃ“N:"/>
                    <EditText
                        android:id="@+id/etxtUbicacion"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:enabled="false"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorVerdeAzul"
                        android:text="FOTO:"/>

                    <ImageView
                        android:id="@+id/imgDeposito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


                <android.widget.Button
                    android:id="@+id/btnDone"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/ic_done_foreground"/>


                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.widget.Button
                        android:id="@+id/btnRegresar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_back_foreground"/>
                    <android.widget.Button
                        android:id="@+id/btnEditar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_edit_foreground"/>
                    <android.widget.Button
                        android:id="@+id/btnBorrar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_delete"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>