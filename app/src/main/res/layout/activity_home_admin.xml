<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".HomeAdmin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="261dp"
        android:layout_height="98dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0.25"
        app:srcCompat="@drawable/logo3_prin" />

    <ScrollView
        android:id="@+id/id_scrollveiw"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.55"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnUsuarios"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/colorVerdeLimon"
                    android:layout_row="1"
                    android:layout_column="0"
                    app:cardCornerRadius="35dp"
                    android:layout_margin="5dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/usuarios"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="usuarios.json"
                            app:lottie_imageAssetsFolder="assets"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usuarios"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnSucursales"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/colorVerdeLimon"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/sucursales"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="sucursales.json"
                            app:lottie_imageAssetsFolder="assets"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sucursales"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnDepositos"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/colorVerdeLimon"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/depositos"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="depositos.json"
                            app:lottie_imageAssetsFolder="assets"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Depositos"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnRegistros"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/colorVerdeLimon"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/registros"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="registros.json"
                            app:lottie_imageAssetsFolder="assets"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registros"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnMaquinas"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/colorVerdeLimon"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/maquinas"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="maquinas.json"
                            app:lottie_imageAssetsFolder="assets"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Máquinas"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnTipos"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/colorVerdeLimon"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/tiposMaquinas"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="maquinas.json"
                            app:lottie_imageAssetsFolder="assets"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipos"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>